<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo transparente -->
    <solid android:color="@android:color/transparent" />

    <!-- Borde -->
    <stroke
        android:width="2dp"
        android:color="#02516F" /> <!-- Color del borde -->

    <!-- Esquinas redondeadas -->
    <corners android:radius="10dp" />

    <!-- Padding interno (opcional, se puede quitar si no se usa como fondo de un layout directamente) -->
    <padding
        android:left="7dp"
        android:top="5dp"
        android:right="7dp"
        android:bottom="5dp" />
</shape>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailUser"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- CardView para Información del Usuario -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/userImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/usuario"
                        android:contentDescription="User Image"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre: Juan Pérez"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:paddingTop="8dp" />

                    <TextView
                        android:id="@+id/userEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Correo: juan.perez@gmail.com"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/userPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Teléfono: +123456789"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/userRole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rol: Administrador"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView para Compras del Usuario -->
            <TextView
                android:id="@+id/purchasesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compras realizadas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:paddingBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/purchaseItem1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Compra #1: Producto A - $50.00"
                        android:textSize="16sp"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/purchaseDate1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha: 01/11/2024"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/purchaseItem2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Compra #2: Producto B - $25.00"
                        android:textSize="16sp"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/purchaseDate2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha: 10/11/2024"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
